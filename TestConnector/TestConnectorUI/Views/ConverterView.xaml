<UserControl x:Class="TestConnectorUI.Views.ConverterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestConnectorUI.Views"
             xmlns:viewmodel="clr-namespace:TestConnectorUI.ViewModels" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             d:DataContext="{d:DesignInstance Type=viewmodel:ConverterViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10">
            <StackPanel>
                <TextBlock Text="BTC" HorizontalAlignment="Right"/>
                <xctk:IntegerUpDown Value="1"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="XRP" HorizontalAlignment="Right"/>
                <xctk:IntegerUpDown Value="15000"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="XMR" HorizontalAlignment="Right"/>
                <xctk:IntegerUpDown Value="50"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="DASH" HorizontalAlignment="Right"/>
                <xctk:IntegerUpDown Value="30"/>
            </StackPanel>

            <TextBlock Text="Total: "/>
            <TextBlock Text="{Binding A, Mode=TwoWay}"/>
        </StackPanel>
    </Grid>
</UserControl>
