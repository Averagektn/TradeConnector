<UserControl x:Class="TestConnectorUI.Views.ConverterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestConnectorUI.Views"
             xmlns:viewmodel="clr-namespace:TestConnectorUI.ViewModels" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             d:DataContext="{d:DesignInstance Type=viewmodel:ConverterViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10">
            <StackPanel>
                <TextBlock Text="BTC" HorizontalAlignment="Right"/>
                <xctk:DecimalUpDown Value="{Binding BtcCount}"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="XRP" HorizontalAlignment="Right"/>
                <xctk:DecimalUpDown Value="{Binding XrpCount}"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="XMR" HorizontalAlignment="Right"/>
                <xctk:DecimalUpDown Value="{Binding XmrCount}"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="DASH" HorizontalAlignment="Right"/>
                <xctk:DecimalUpDown Value="{Binding DashCount}"/>
            </StackPanel>

            <DataGrid ItemsSource="{Binding Currencies}" AutoGenerateColumns="False"
                      MaxHeight="300" ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.CanContentScroll="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Currency" Binding="{Binding CurrencyType}"/>
                    <DataGridTextColumn Header="Btc" Binding="{Binding Btc}"/>
                    <DataGridTextColumn Header="Xmr" Binding="{Binding Xmr}"/>
                    <DataGridTextColumn Header="Xrp" Binding="{Binding Xrp}"/>
                    <DataGridTextColumn Header="Dash" Binding="{Binding Dash}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <ScrollViewer Grid.Column="1">
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="REST" HorizontalAlignment="Center"/>
            <TextBlock Text="BTCUSD" HorizontalAlignment="Center"/>
            <TextBlock Text="Candles" HorizontalAlignment="Center"/>
                <DataGrid ItemsSource="{Binding Candles}" AutoGenerateColumns="False"          
                          MaxHeight="300" ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.CanContentScroll="True">
                    <DataGrid.Columns>
                    <DataGridTextColumn Header="Pair" Binding="{Binding Pair}"/>
                    <DataGridTextColumn Header="Open price" Binding="{Binding OpenPrice}"/>
                    <DataGridTextColumn Header="Close price" Binding="{Binding ClosePrice}"/>
                    <DataGridTextColumn Header="Low price" Binding="{Binding LowPrice}"/>
                    <DataGridTextColumn Header="High price" Binding="{Binding HighPrice}"/>
                    <DataGridTextColumn Header="Open time" Binding="{Binding OpenTime}"/>
                    <DataGridTextColumn Header="Total price" Binding="{Binding TotalPrice}"/>
                    <DataGridTextColumn Header="Total volume" Binding="{Binding TotalVolume}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Command=""/>

            <TextBlock Text="WebSocket" HorizontalAlignment="Center"/>
            <TextBlock Text="BTCUSD" HorizontalAlignment="Center"/>
            <TextBlock Text="Trades" HorizontalAlignment="Center"/>
                <DataGrid ItemsSource="{Binding Trades}" AutoGenerateColumns="False" 
                          MaxHeight="300" ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.CanContentScroll="True">
                    <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                    <DataGridTextColumn Header="Pair" Binding="{Binding Pair}"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount}"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price}"/>
                    <DataGridTextColumn Header="Side" Binding="{Binding Side}"/>
                    <DataGridTextColumn Header="Time" Binding="{Binding Time}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
